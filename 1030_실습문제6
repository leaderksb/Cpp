 #include <iostream>
#include <string>
using namespace std;
int main() {
	string text;
	cout << "아래에 한줄을 입력하세요(exit 입력하면 종료)";
	cout << endl << ">>";
	while (true) {
		getline(cin, text);
		if (text == "exit") break;
		for (int i = (text.length() - 1); i >= 0; i--)
			cout << text[i];

		cout << endl;
	}
	return 0;
} 
